<%= form_with model: [:admin, authorized_user] do |form| %>
  <div>
    <%= form.label :email_address %>
    <%= form.email_field :email_address, required: true %>
  </div>

  <div>
    <%= form.label :account_id, t("common.account") %>
    <%= form.collection_select :account_id, Account.all, :id, :name, include_blank: t("admin.messages.na") %>
  </div>

  <div>
    <%= form.submit class: "button" %>
  </div>
<% end %>
