<% content_for :title, t("admin.titles.edit_user") + " | #{@user.name}" %>

<h1><%= t("admin.titles.edit_user") %></h1>

<%= form_with model: [:admin, @user] do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :email_address %>
    <%= form.email_field :email_address, disabled: true %>
  </div>

  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, required: true %>
  </div>

  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name, required: true %>
  </div>

  <div>
    <%= form.label :admin %>
    <%= form.check_box :admin %>
  </div>

  <div>
    <%= form.label :account_id, t("common.account") %>
    <%= form.collection_select :account_id, Account.all, :id, :name, include_blank: t("admin.messages.na") %>
  </div>

  <div>
    <%= form.submit class: "button" %>
  </div>
<% end %>

<%= link_to t("admin.buttons.back"), admin_users_path, class: "button" %>
