<h1>Accounts</h1>

<%= link_to "New Account", new_admin_account_path, class: "button" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.name %></td>
        <td><%= account.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= account.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to "Edit", edit_admin_account_path(account) %> |
          <%= button_to "Delete", admin_account_path(account), method: :delete, data: { turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
