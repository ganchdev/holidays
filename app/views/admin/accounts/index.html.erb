<h1><%= t("admin.titles.accounts") %></h1>

<%= link_to t("admin.buttons.new_account"), new_admin_account_path, class: "button" %>

<table>
  <thead>
    <tr>
      <th><%= t("common.id") %></th>
      <th><%= t("common.name") %></th>
      <th><%= t("common.created_at") %></th>
      <th><%= t("common.updated_at") %></th>
      <th><%= t("common.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.id %></td>
        <td><%= account.name %></td>
        <td><%= account.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= account.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to t("admin.buttons.edit"), edit_admin_account_path(account) %> |
          <%= button_to t("admin.buttons.delete"), admin_account_path(account), method: :delete, data: { turbo_confirm: t("admin.messages.confirm_delete") } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
