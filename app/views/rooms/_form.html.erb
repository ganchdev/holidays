<%= form_with(model: [@property, room]) do |form| %>
  <%= form_errors room %>

  <div>
    <%= form.label :name, t('helpers.label.room.name') %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :capacity, t('helpers.label.room.capacity') %>
    <%= form.number_field :capacity, min: 1 %>
  </div>

  <div>
    <%= form.label :color, t('helpers.label.room.color') %>
    <%= form.color_field :color %>
  </div>

  <div>
    <%= form.label t("common.price_per_night") %>
    <%= form.number_field :price, step: "0.01", min: 0 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
