<% content_for :title, "Properties" %>

<h1>Properties</h1>

<div id="properties">
  <% @properties.each do |property| %>
    <%= render property %>
    <p>
      <%= link_to "Show this property", account_property_path(Current.account, property) %>
    </p>
  <% end %>
</div>

